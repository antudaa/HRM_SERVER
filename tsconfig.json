{
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  }
}
